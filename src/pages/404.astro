---
import { config } from '../config.js';

const { siteName, backgroundColor, textColor } = config;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - {siteName}</title>
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="theme-color" content={backgroundColor} />
    <style define:vars={{ backgroundColor, textColor }}>
      *, *::before, *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        height: 100%;
        width: 100%;
        background-color: var(--backgroundColor);
        color: var(--textColor);
        overflow: hidden;
      }

      body {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .error-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        padding: 2vmin;
      }

      h1 {
        font-family: 'Impact', 'Arial Narrow', 'Helvetica Neue Condensed', 'Arial Black', sans-serif;
        font-weight: 900;
        text-transform: uppercase;
        font-size: 50vw;
        line-height: 0.85;
        letter-spacing: 0.08em;
        opacity: 0.9;
        user-select: none;
      }

      /* Scale down if viewport is very wide relative to height */
      @media (min-aspect-ratio: 2/1) {
        h1 { font-size: 80vh; }
      }

      a {
        font-family: 'Impact', 'Arial Narrow', 'Helvetica Neue Condensed', 'Arial Black', sans-serif;
        font-weight: 900;
        text-transform: uppercase;
        color: var(--textColor);
        text-decoration: none;
        font-size: clamp(1rem, 3vw, 2rem);
        letter-spacing: 0.15em;
        opacity: 0.4;
        transition: opacity 0.2s;
        margin-top: 1vmin;
      }

      a:hover {
        opacity: 1;
      }

      @media (prefers-reduced-motion: reduce) {
        a { transition: none; }
      }
    </style>
  </head>

  <body>
    <main class="error-container">
      <h1>404</h1>
      <a href="/">RETURN HOME</a>
    </main>
  </body>
</html>
